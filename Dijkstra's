#include <stdio.h>

int main(){
    int n,src;
    int i,j;

    int cost[50][50];
    int dist[50];
    int visited[50];

    printf("Enter number of vertices: ");
    scanf("%d",&n);

    printf("Enter cost adjacency matrix (999 for no edge):\n");
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            scanf("%d",&cost[i][j]);
        }
    }

    printf("Enter source vertex (0 to %d): ",n-1);
    scanf("%d",&src);

    for(i=0;i<n;i++){
        dist[i] = cost[src][i];
        visited[i] = 0;
    }

    dist[src] = 0;
    visited[src] = 1;

    for(i=0;i<n-1;i++){
        int min = 999;
        int u = -1;

        for(j=0;j<n;j++){
            if(!visited[j] && dist[j] < min){
                min = dist[j];
                u = j;
            }
        }

        visited[u] = 1;

        for(j=0;j<n;j++){
            if(!visited[j] && dist[u] + cost[u][j] < dist[j]){
                dist[j] = dist[u] + cost[u][j];
            }
        }
    }

    printf("Shortest distances from source:\n");
    for(i=0;i<n;i++){
        printf("To %d = %d\n",i,dist[i]);
    }

    return 0;
}
